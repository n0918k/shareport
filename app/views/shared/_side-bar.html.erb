  <div class="side-bar justify-content-start">
    <div class="side-content-head mb-5">
      <%= link_to root_path do%>
        <i class="fa fa-home fa-2x mr-3"><span class="ml-4">ホ ー ム</span></i>
      <% end %>
    </div>

    <div class="side-content mt-5 mb-5 ">
      <% if user_signed_in? %>
        <%= link_to new_portfolio_path do%>
          <i class="fa fa-paper-plane fa-2x mr-3 "><span class="ml-3"> 投稿する</span></i>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path do%>
          <i class="fa fa-rocket fa-2x mr-2"><span class="ml-3"> 新規登録</span></i>
        <% end%>
      <% end%>
    </div>

    <div class="side-content mt-5 mb-5">
