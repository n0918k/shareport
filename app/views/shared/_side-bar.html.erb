        <% end%>
      <% else %>
        <%= link_to new_user_session_path do%>
          <i class="fa fa-key  fa-2x mr-3"><span class="ml-4">ログイン</span></i>
        <% end%>
      <% end%>
    </div>

    <div class="side-content mt-5 mb-5">
      <% if user_signed_in? %>
          <%= link_to favorite_portfolios_path do%>
          <i class="fa fa-heart fa-2x ml-2"><span class="ml-4">お気に入り</span></i>
        <% end%>
      <% end%>
