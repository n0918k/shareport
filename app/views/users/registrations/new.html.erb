
<div class="container-fluid text-center">
<div class="container w-50">
<h2 class=" h2 bg-primary text-light p-4 ">新規登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"form-group") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :nickname ,class:"mb-4"%>
    <%= f.text_field :nickname,class:"form-control mb-4 input-lg" %>
  </div>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :email ,class:"mb-4"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control mb-4 input-lg" %>
  </div>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :password,class:"mb-4" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control mb-4 input-lg" %>
  </div>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :password_confirmation,class:"mb-4" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control mb-4 input-lg" %>
  </div>

  <div class="form-group mt-5">
    <%= f.submit "登録" ,class: "btn btn-outline-primary w-100 btn-lg"%>
  </div>
<% end %>

</div>
<div class="container w-50 text-center mt-5 h4">
<%= render "users/shared/links" %>
</div>
</div>
